<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="3" author="ngrupp">
        <createTable tableName="booking">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="event_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="booking_time" type="TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="booking" baseColumnNames="event_id"
                                referencedTableName="event" referencedColumnNames="id"
                                constraintName="fk_booking_event"/>
        <addForeignKeyConstraint baseTableName="booking" baseColumnNames="customer_id"
                                referencedTableName="customer" referencedColumnNames="id"
                                constraintName="fk_booking_customer"/>
    </changeSet>
    <changeSet id="3.1" author="ngrupp">
        <insert tableName="booking">
            <column name="event_id" valueNumeric="1"/>
            <column name="customer_id" valueNumeric="1"/>
            <column name="booking_time" valueDate="2025-08-18T09:00:00"/>
        </insert>
        <insert tableName="booking">
            <column name="event_id" valueNumeric="2"/>
            <column name="customer_id" valueNumeric="2"/>
            <column name="booking_time" valueDate="2025-08-18T10:00:00"/>
        </insert>
    </changeSet>
</databaseChangeLog>
